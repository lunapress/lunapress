{
    "name": "lunapress/lunapress",
    "description": "Monorepo for the entire ecosystem",
    "type": "project",
    "authors": [
        {
            "name": "Onepix",
            "homepage": "https://onepix.net",
            "role": "Company"
        },
        {
            "name": "0zd0",
            "role": "Lead Developer",
            "homepage": "https://github.com/0zd0"
        }
    ],
    "require": {
        "lunapress/core-contracts": "@dev",
        "lunapress/frontend-contracts": "@dev",
        "lunapress/wp-assets-contracts": "@dev",
        "lunapress/wp-core-contracts": "@dev",
        "php": "^8.3",
        "php-di/php-di": "^7.1",
        "psr/container": "^2"
    },
    "require-dev": {
        "lunapress/static-analysis": "@dev",
        "roots/wordpress": "^6.8.3",
        "symplify/monorepo-builder": "^12.2"
    },
    "replace": {
        "lunapress/core": "self.version",
        "lunapress/frontend": "self.version",
        "lunapress/wp-assets": "self.version",
        "lunapress/wp-core": "self.version"
    },
    "repositories": [
        {
            "options": {
                "symlink": true
            },
            "type": "path",
            "url": "packages/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "LunaPress\\Core\\": "packages/core/src/",
            "LunaPress\\Frontend\\": "packages/frontend/src/",
            "LunaPress\\Wp\\Assets\\": "packages/wp-assets/src/",
            "LunaPress\\Wp\\Core\\": "packages/wp-core/src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "roots/wordpress-core-installer": true
        }
    },
    "scripts": {
        "release": "monorepo-builder release",
        "merge": "monorepo-builder merge",
        "fix:phpcs": "lunapress-static-analysis phpcbf",
        "check:phpcs": "lunapress-static-analysis phpcs",
        "check:psalm": "lunapress-static-analysis psalm -- --no-cache",
        "check": [
            "@check:phpcs",
            "@check:psalm"
        ]
    }
}
